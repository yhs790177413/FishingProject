<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_app_bg" 
    android:paddingBottom="20dp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/image_one"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/start_app_01"/>
    
     <ImageView
         android:layout_centerHorizontal="true"
         android:layout_below="@+id/image_one"
         android:id="@+id/image_two"
         android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/start_app_02"/>
     
      <ImageView
          android:layout_centerHorizontal="true"
           android:layout_below="@+id/image_two"
          android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/start_app_03"/>
      
      
 <ImageView
     android:layout_centerHorizontal="true"
     android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/start_app_04"/>
</RelativeLayout>