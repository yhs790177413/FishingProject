<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_white"
    android:orientation="vertical" >

    <com.goby.fishing.common.utils.helper.android.app.SlideShowView
        android:id="@+id/slideshowView"
        android:layout_width="fill_parent"
        android:layout_height="192dp"
        android:background="@color/gray_f2f2f2" />

    <RelativeLayout
        android:id="@+id/gift_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/active_status_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/active_opening_icon" />

        <TextView
            android:id="@+id/active_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/active_status_image"
            android:layout_toLeftOf="@+id/right_icon"
            android:layout_marginRight="10dp"
            android:text="光威龙纹理户外套装"
            android:textColor="@color/gray_333333"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/right_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right_icon" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="开奖进度"
        android:textColor="@color/gray_aaaaaa"
        android:textSize="12sp" />

    <ProgressBar
        android:id="@+id/pic_ProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/myprogress_style" />

    <FrameLayout
        android:id="@+id/my_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/join_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="已参与3次"
            android:textColor="@color/gray_aaaaaa"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/total_join_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="总需500次"
            android:textColor="@color/gray_aaaaaa"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/need_join_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="剩余497次"
            android:textColor="@color/gray_aaaaaa"
            android:textSize="12sp" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="@color/gray_dddddd" />

    <FrameLayout
        android:id="@+id/active_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" >

        <TextView
            android:id="@+id/active_detail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="活动详情"
            android:textColor="@color/gray_333333"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/arrow_right_icon" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_dddddd" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" >

        <TextView
            android:id="@+id/me_join_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="您参与了2次"
            android:textColor="@color/blue_35b2e1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/my_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="您剩余10个积分"
            android:textColor="@color/gray_aaaaaa"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_dddddd" />

    <TextView
        android:id="@+id/join_people_tips"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="参与用户"
        android:textColor="@color/gray_aaaaaa"
        android:textSize="14sp" />

</LinearLayout>