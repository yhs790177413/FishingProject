<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_dialog1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_list_bg"
        android:orientation="horizontal"
        android:padding="10dip" >

        <TextView
            android:id="@+id/tv_dialog1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:duplicateParentState="true"
            android:text="男"
            android:textColor="@color/black"
            android:textSize="@dimen/font_32" />

        <RadioButton
            android:id="@+id/rb_dialog1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:button="@drawable/selector_red_radiobutton"
            android:duplicateParentState="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dialog2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_list_bg"
        android:orientation="horizontal"
        android:padding="10dip" >

        <TextView
            android:id="@+id/tv_dialog2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:duplicateParentState="true"
            android:text="女"
            android:textColor="@color/black"
            android:textSize="@dimen/font_32" />

        <RadioButton
            android:id="@+id/rb_dialog2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:button="@drawable/selector_red_radiobutton"
            android:duplicateParentState="true" />
    </LinearLayout>

    

</LinearLayout>