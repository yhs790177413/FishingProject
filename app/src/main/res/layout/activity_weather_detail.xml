<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/blue_20ace1"
    android:orientation="vertical" >


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:background="@color/blue_35b2e1"
            android:paddingRight="15dp" >

            <LinearLayout
                android:id="@+id/left_back_layout"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="left|center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" >

                <ImageView
                    android:id="@+id/left_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/arrow_left_icon" />
            </LinearLayout>

            <TextView
                android:id="@+id/center_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="去哪钓鱼"
                android:textColor="@color/font_white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/weather_share_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:text="分享"
                android:textColor="@color/background_white"
                android:textSize="16sp" />
        </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:id="@+id/fishpoint_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="念水鱼库"
                        android:textColor="@color/background_white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fishpoint_name"
                        android:layout_marginTop="10dp"
                        android:text="2016/01/23 09:52:22"
                        android:textColor="@color/background_white"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/fishpoint_image"
                        android:layout_width="119.5dp"
                        android:layout_height="99dp"
                        android:layout_below="@+id/time"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/weather_image_icon"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:layout_width="119.5dp"
                        android:layout_height="99dp"
                        android:layout_below="@+id/time"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/weather_imager_bg"
                        android:scaleType="fitXY" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="天气"
                            android:textColor="@color/background_white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/weather_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="晴"
                            android:textColor="@color/background_white"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="气压"
                            android:textColor="@color/background_white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/pressure_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="756Ph"
                            android:textColor="@color/background_white"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="温度"
                            android:textColor="@color/background_white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/temp_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="-12°C"
                            android:textColor="@color/background_white"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="湿度"
                            android:textColor="@color/background_white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/humidity_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="21%"
                            android:textColor="@color/background_white"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="风向"
                            android:textColor="@color/background_white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/wind_deg_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="西北风"
                            android:textColor="@color/background_white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/wind_level_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="5级"
                            android:textColor="@color/background_white"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="云量"
                            android:textColor="@color/background_white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/clouds_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="44%"
                            android:textColor="@color/background_white"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/blue_35b2e1"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="温湿压五日预报"
                    android:textColor="@color/background_white"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/pressure_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/pressure_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/weather_green_ball" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="气压"
                            android:textColor="@color/background_white"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/temp_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/temp_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/weather_white_boll" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="气温"
                            android:textColor="@color/background_white"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/layout_day_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/day_one_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="星期六"
                        android:textColor="@color/background_white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/date_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1/23"
                        android:textColor="@color/background_white"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_day_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/day_two_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="星期日"
                        android:textColor="@color/background_white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/date_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1/24"
                        android:textColor="@color/background_white"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_day_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/day_three_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="星期一"
                        android:textColor="@color/background_white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/date_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1/25"
                        android:textColor="@color/background_white"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_day_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/day_four_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="星期二"
                        android:textColor="@color/background_white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/date_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1/26"
                        android:textColor="@color/background_white"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_day_five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/day_five_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="星期三"
                        android:textColor="@color/background_white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/date_five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1/27"
                        android:textColor="@color/background_white"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="3dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/day_1"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/background_white" />

                    <ImageView
                        android:id="@+id/day_2"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/background_white"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/day_3"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/background_white"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/day_4"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/background_white"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/day_5"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/background_white"
                        android:visibility="invisible" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/white_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/background_white" />
            </FrameLayout>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:paddingBottom="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="温度"
                        android:textColor="@color/background_white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/choose_temp_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/background_white"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="湿度"
                        android:textColor="@color/background_white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/choose_humidity_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/background_white"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="气压"
                        android:textColor="@color/background_white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/choose_pressure_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/background_white"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="天气"
                        android:textColor="@color/background_white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/choose_weather_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/background_white"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="风向"
                        android:textColor="@color/background_white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/choose_wind_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/background_white"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="云量"
                        android:textColor="@color/background_white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/choose_clound_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/background_white"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@color/blue_35b2e1"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="气象谚语"
                android:textColor="@color/background_white"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/meteorological_tips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="气象"
                    android:textColor="@color/background_white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/clound_and_rain_tips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="云雨"
                    android:textColor="@color/background_white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/spring_tips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="春"
                    android:textColor="@color/background_white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/summary_tips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="夏"
                    android:textColor="@color/background_white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/autumn_tips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="秋"
                    android:textColor="@color/background_white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/winter_tips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="冬"
                    android:textColor="@color/background_white"
                    android:textSize="14sp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="3dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/meteorological_line"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/background_white" />

                    <ImageView
                        android:id="@+id/cloud_and_rain_line"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/background_white"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/spring_line"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/background_white"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/summary_line"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/background_white"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/autumn_line"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/background_white"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/winter_line"
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@color/background_white"
                        android:visibility="invisible" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/background_white" />
            </FrameLayout>

            <TextView
                android:id="@+id/proverb_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center_horizontal"
                android:paddingBottom="20dp"
                android:text="@string/meteorological"
                android:textColor="@color/background_white"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>