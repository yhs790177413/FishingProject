<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:visibility="gone" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" >

        <ImageView
            android:id="@+id/user_header"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/header_circle_icon"
            android:scaleType="fitXY" >
        </ImageView>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/header_view_bg"
            android:scaleType="fitXY" >
        </ImageView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:text="用户123456"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <Button
        android:id="@+id/add_attention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/add_attention_icon"
        android:gravity="center"
        android:text="添加关注"
        android:textColor="@color/font_white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/send_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/send_message_icon"
        android:gravity="center"
        android:text="发私信"
        android:textColor="@color/font_white"
        android:textSize="14sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/fans_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="粉丝4"
            android:textColor="@color/gray_aaaaaa"
            android:textSize="14sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/gray_aaaaaa" />

        <TextView
            android:id="@+id/attention_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关注30"
            android:textColor="@color/gray_aaaaaa"
            android:textSize="14sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/gray_aaaaaa" />

        <TextView
            android:id="@+id/praise_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人气  0"
            android:textColor="@color/gray_aaaaaa"
            android:textSize="14sp" />
    </LinearLayout>

    <GridView
        android:id="@+id/type_grid"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:horizontalSpacing="6dp"
        android:numColumns="4"
        android:scrollbars="none"
        android:verticalSpacing="5dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray_f0f0f0" />

</LinearLayout>