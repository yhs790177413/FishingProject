<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/bottom_layout"
    android:layout_below="@+id/title_layout"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:paddingTop="6dp"
    android:scrollbars="none" >

    <LinearLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_white"
        android:orientation="vertical"
        android:paddingBottom="9dp"
        android:paddingLeft="9dp"
        android:paddingTop="9dp"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/user_header"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/header_circle_icon"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/header_view_bg"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/user_header"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="李函函"
                        android:textColor="@color/blue_35b2e1"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="2分钟前"
                        android:textColor="@color/gray_aaaaaa"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/tag_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:background="@drawable/fishing_type_icon" />

                    <ImageView
                        android:id="@+id/jing_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/jing_icon" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tag_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1302"
                    android:textColor="@color/gray_aaaaaa"
                    android:textSize="11sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/friend_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right|center_vertical"
                android:paddingRight="5dp"
                android:text="北京鱼友"
                android:textColor="@color/gray_aaaaaa"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/add_jing_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/friend_city"
                android:layout_marginTop="10dp"
                android:gravity="right|center_vertical"
                android:paddingRight="5dp"
                android:text="加精"
                android:textColor="@color/gray_aaaaaa"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/dynamic_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:paddingRight="5dp"
            android:text="深夜投毒"
            android:textColor="@color/gray_333333"
            android:textSize="14sp" />

        <GridView
            android:id="@+id/footerprint_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:horizontalSpacing="9dp"
            android:numColumns="3"
            android:scrollbars="none"
            android:verticalSpacing="10dp" />

        <TextView
            android:id="@+id/fish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="9dp"
            android:text="美人鱼"
            android:textColor="@color/gray_aaaaaa" />

        <TextView
            android:id="@+id/fish_tool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="9dp"
            android:layout_marginTop="6dp"
            android:text="宝马锂"
            android:textColor="@color/gray_aaaaaa" />

        <TextView
            android:id="@+id/weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="9dp"
            android:layout_marginTop="6dp"
            android:text="多云"
            android:textColor="@color/gray_aaaaaa" />

        <LinearLayout
            android:id="@+id/gps_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="9dp"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gps_cricle" />

            <TextView
                android:id="@+id/fish_point_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="士大夫 是的佛 管道工"
                android:textColor="@color/blue_35b2e1"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="北京朝阳区"
                android:textColor="@color/blue_35b2e1"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/location_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/unknow_location_icon" />

                <TextView
                    android:id="@+id/location_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="未知"
                    android:textColor="@color/gray_aaaaaa"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fish_type_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/fish_type_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/unknow_type_icon" />

                <TextView
                    android:id="@+id/fish_type_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="渔获种类"
                    android:textColor="@color/gray_aaaaaa"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/fish_number_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/no_fish_icon" />

                <TextView
                    android:id="@+id/fish_number_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="空军出动"
                    android:textColor="@color/gray_aaaaaa"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/is_free_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/free_icon" />

                <TextView
                    android:id="@+id/free_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="费用不详"
                    android:textColor="@color/gray_aaaaaa"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/server_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统打赏了100鱼票"
            android:textColor="@color/gray_aaaaaa"
            android:visibility="gone"
            android:textSize="12sp" />
        
        <GridView
            android:id="@+id/user_header_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:listSelector="@color/background_white"
            android:numColumns="8"
            android:scrollbars="none" />

        <TextView
            android:id="@+id/comment_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="评论"
            android:textColor="@color/gray_333333"
            android:textSize="12sp" />
    </LinearLayout>

</ScrollView>