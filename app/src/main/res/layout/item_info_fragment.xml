<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/stype_layout_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/layout_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/info_name_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/info_image_one"
                android:text="垂钓的15种技巧猫咪帮你--道来"
                android:textColor="@color/gray_333333"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/info_image_one"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/information_view_icon"
                android:scaleType="fitXY" >
            </ImageView>

            <ImageView
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/information_view_bg"
                android:scaleType="fitXY" >
            </ImageView>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/info_name_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="垂钓的15种技巧猫咪帮你--道来"
                android:textColor="@color/gray_333333"
                android:textSize="16sp" />

            <GridView
                android:id="@+id/info_image_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadingEdge="none"
                android:horizontalSpacing="8dp"
                android:layout_marginTop="5dp"
                android:numColumns="3"
                android:scrollbars="none" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/info_name_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="垂钓是垂杆钓鱼的简称，俗称“钓鱼”，是指使用钓竿，鱼钩，渔线等钓具"
                android:textColor="@color/gray_333333"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <ImageView
                    android:id="@+id/info_image_three"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/active_view_icon"
                    android:scaleType="fitXY" >
                </ImageView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/active_view_bg"
                    android:scaleType="fitXY" >
                </ImageView>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp" >

            <com.goby.fishing.common.utils.helper.android.app.BorderTextView
                android:id="@+id/type_image"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textSize="10sp" >
            </com.goby.fishing.common.utils.helper.android.app.BorderTextView>
            
            <com.goby.fishing.common.utils.helper.android.app.BorderTextView
                android:id="@+id/jian_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/type_image"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:visibility="gone"
                android:textSize="10sp" >
            </com.goby.fishing.common.utils.helper.android.app.BorderTextView>

            <TextView
                android:id="@+id/visit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/jian_image"
                android:text="6 阅读"
                android:textColor="@color/gray_aaaaaa"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/visit_text"
                android:text="6 评论"
                android:textColor="@color/gray_aaaaaa"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/praise_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/comment_count"
                android:text="32 赞"
                android:textColor="@color/gray_aaaaaa"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="刚刚"
                android:textColor="@color/gray_aaaaaa"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/stype_layout_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:visibility="gone" >

        <TextView
            android:id="@+id/info_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:text="垂钓是垂杆钓鱼的简称，俗称“钓鱼”，是指使用钓竿，鱼钩，渔线等钓具"
            android:textColor="@color/gray_333333"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp" >

            <ImageView
                android:id="@+id/image_single"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:background="@drawable/active_view_icon"
                android:scaleType="fitXY" >
            </ImageView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:background="@drawable/active_view_bg"
                android:scaleType="fitXY" >
            </ImageView>
        </RelativeLayout>

        <ImageView
            android:id="@+id/status_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/image_layout"
            android:layout_marginRight="25dp"
            android:background="@drawable/active_start_status" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_layout"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/gray_aaaaaa"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textColor="@color/gray_aaaaaa"
                android:textSize="14sp" />
        </FrameLayout>
    </RelativeLayout>

   <LinearLayout
        android:id="@+id/stype_layout_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_white"
        android:orientation="vertical"
        android:paddingTop="6dp" 
        android:paddingBottom="6dp"
        android:visibility="gone"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/user_header"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/header_circle_icon"
                android:scaleType="fitXY" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/header_view_bg"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/user_header"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="李函函"
                        android:textColor="@color/blue_35b2e1"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/feed_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="2分钟前"
                        android:textColor="@color/gray_aaaaaa"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/tag_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:background="@drawable/fishing_type_icon" />

                    <ImageView
                        android:id="@+id/jing_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/jing_icon" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tag_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1302"
                    android:textColor="@color/gray_aaaaaa"
                    android:textSize="11sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="北京鱼友"
                android:textColor="@color/gray_aaaaaa" >
            </TextView>
        </RelativeLayout>

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="北京鱼友"
            android:textColor="@color/gray_333333"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp" >

            <GridView
                android:id="@+id/footer_image_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="8dp"
                android:fadingEdge="none"
                android:numColumns="3"
                android:scrollbars="none" />

            <TextView
                android:id="@+id/image_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/image_count_bg"
                android:gravity="center"
                android:text="3 图"
                android:textColor="@color/font_white"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/fish_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="美人鱼"
            android:textColor="@color/gray_aaaaaa" />

        <TextView
            android:id="@+id/fish_tool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="宝马锂"
            android:textColor="@color/gray_aaaaaa" />

        <TextView
            android:id="@+id/weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="多云"
            android:textColor="@color/gray_aaaaaa" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="bottom" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/layout_right"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/layout_right"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/gps_cricle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gps_cricle" />

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="钓点距您56公里"
                    android:textColor="@color/blue_35b2e1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/prise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/commend_bg"
                    android:gravity="center"
                    android:text="2 赞"
                    android:textColor="@color/gray_aaaaaa" />

                <TextView
                    android:id="@+id/commends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/commend_bg"
                    android:gravity="center"
                    android:text="3 评论"
                    android:textColor="@color/gray_aaaaaa" />
            </LinearLayout>
        </RelativeLayout>

       
    </LinearLayout>

</LinearLayout>